<!DOCTYPE html>
<html>

<head>
  <title>BreakableToy</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
</head>

<body>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <%- if current_user -%>
    <div class="row">
      <span class="columns small-4">
        <h2 class="fi-home">
          <%= link_to " Home", user_path(current_user) %>
        </h2>
      </span>
      <div class="columns small-8">
        <ul class="inline-list right">
          <li>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
          </li>
        </ul>

      </div>
    </div>
    <div class="row">
      <div class="columns small-12">
        <dl class="sub-nav">
          <dd>
            <span class="fi-torsos"><%= link_to "Groups", groups_path %></span>
          </dd>
          <dd>
            <span class="fi-clipboard-pencil"><%= link_to "Tasks", tasks_path %></span>
          </dd>
          <dd>
            <span class="fi-address-book"><%= link_to "Contacts", contacts_path %></span>
          </dd>
          <dd>
            <a href="" class="fi-folder"> Files</a>
          </dd>
        </dl>
      </div>
    </div>
      <%- else -%>
      <div class="sign-up row">
        <div class="columns small-4 small-centered">
          <h2>Welcome <br><small>please sign in</small></h2>
          <%= link_to 'Sign Up', new_user_registration_path, class: "button expand" %>
          <br>
          <%= link_to 'Sign In', new_user_session_path, class: "button expand" %>
        </div>
      </div>
      <%- end -%>

    <%- flash.each do |key, value| -%>
      <div alert-box class="alert-box success flash-<%= key %>">

        <%= value %>
      </div>
      <%- end -%>

        <%= yield %>

          <%= javascript_include_tag 'application', "autocomplete-rails.js"  %>
            <%= yield :extra_footer %>
  <script>
    if ($("#map").length > 0) {
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>, {draggable: true});
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    }
  </script>
</body>

</html>

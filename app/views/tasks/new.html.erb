<h2>Create a new task</h2>
<%= form_for(@task) do |f| %>
<fieldset>
  <legend>New Task</legend>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.hidden_field :group_id, value: params[:group_id] %>

  <%= f.submit "Create Task", class: "button" %>
</fieldset>
<% end %>

<h3>Edit <small class="fi-clipboard"><%= @task.title %></small></h3>
<%= form_for(@task) do |f| %>
<fieldset>
  <legend>Update Task</legend>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.hidden_field :group_id, value: @task.group_id %>

  <%= f.submit "Update Task", class: "button" %>
</fieldset>
<% end %>

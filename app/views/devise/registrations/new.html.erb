<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<fieldset>
  <legend>Sign Up</legend>
  <div class="row">
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :email, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :password, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :password_confirmation, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :first_name, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :last_name, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :last_name, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :title, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :title, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :address, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :address, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :city, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :city, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :state, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :state, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :zip, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :zip, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <%= f.label :phone, class: "right inline" %>
      </div>
      <div class="small-10 columns">
        <%= f.phone_field :phone, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="columns small-4">
        <%= f.submit "Sign up", class: "button" %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= f.label :profile_photo %><br />
        <%= f.file_field :profile_photo %>
      </div>
    </div>
  </div>
</fieldset>
<% end %>

<%= render "devise/shared/links" %>

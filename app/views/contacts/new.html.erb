<h2>Create a new contact</h2>
<%= form_for(@contact) do |f| %>
<fieldset>
  <legend>New Contact</legend>
  <%= f.label :company_name %>
  <%= f.text_field :company_name %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :phone_ext %>
  <%= f.text_field :phone_ext %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.hidden_field :group_id, value: params[:group_id] %>

  <%= f.submit "Create Contact", class: "button" %>
</fieldset>
<% end %>
